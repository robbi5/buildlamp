void thriller(){
  
    for (int j = 0 ; j<=20; j+=3) {
      int i = random(j, 20);  
      for(int fadeValue = 0 ; fadeValue <= 5; fadeValue +=1) { 
        strip.setPixelColor(fadeValue, strip.Color(i*3,100 - 20*i,2*i +50));
        strip.setPixelColor(5-fadeValue, strip.Color(i*10, 200 - 20*i,2*i +10));
        strip.show();        
        delay(30);                            
      }    
   
  }
}